{
    "compilerOptions": {
      "baseUrl": ".",
      "noImplicitAny": true,
      "module": "es6",
      "outDir": "./dist/",
      "target": "es6",
      "jsx": "react",     
      "allowJs": true, 
      "moduleResolution": "node",
      "paths": {
        "hello-world-subpackage": ["./packages/hello-world-subpackage"]
      },      
      "declaration": true,
      "noEmit": false
    },
    "files": [
        "./src/main.js"        
    ],
    "references": [
      { "path": "packages/hello-world-subpackage" }      
    ],
    "include": [      
        "src/**/*"        
    ]
}